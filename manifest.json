{
  "manifest_version": 3,
  "name": "景灿-冲冲冲",
  "version": "1.0.0.2",
  "description": "在小红书、抖音、B站、快手等平台为PR提供约合帮助的工具",
  "permissions": [
    "webRequest",
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://*.xiaohongshu.com/*",
    "https://*.xiaohongshu.cn/*",
    "https://*.sogou.com/*",
    "https://*.sogou.cn/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/16.png",
        "html/template.html",
        "js/plugin/jquery.min.js",
        "js/plugin/tabler.min.js",
        "js/plugin/xlsx.full.min.js",
        "js/edit/DomFunction.js",
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.xiaohongshu.com/*",
        "*://*.xiaohongshu.cn/*",
        "*://*.sogou.com/*",
        "*://*.sogou.cn/*"
      ],
      "js": [
        "js/plugin/jquery.min.js",
        "js/plugin/tabler.min.js",
        "js/plugin/xlsx.full.min.js",
        "js/plugin/datatables.min.js",
        "js/content.js",
        "js/plugin/jsrsasign-all-min.js",
        "js/edit/sendFlask.js",
        "js/edit/myjs.js",
        "js/edit/plat/xhs.js",
        "js/edit/plat/douyin.js",
        "js/edit/plat/bili.js",
        "js/edit/cardHtml.js",
        "js/edit/RequestAjax.js",
        "js/edit/API.js",
        "js/edit/DomFunction.js"
      ],
      "css": [
        "css/plugin/bootstrap.min.css",
        "css/mystyle.css"
      ],
      "run_at": "document_end"
    }
  ]
}